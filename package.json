{
  "name": "creator-ai",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prisma:generate": "npm run build --workspace=@creator-ai/database",
    "prisma:migrate": "npm run prisma --workspace=@creator-ai/database -- migrate deploy"
  },
  "devDependencies": {
    "turbo": "latest"
  }
}