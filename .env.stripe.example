# Add these to your .env file

# Stripe - 4-Tier Subscription System
# Starter Tier ($4.99/mo, $49.99/yr)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_xxx
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_xxx

# Premium Tier ($7.99/mo, $74.99/yr)  
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly_xxx
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly_xxx

# Unlimited Tier ($12.99/mo, $129.99/yr)
STRIPE_UNLIMITED_MONTHLY_PRICE_ID=price_unlimited_monthly_xxx
STRIPE_UNLIMITED_YEARLY_PRICE_ID=price_unlimited_yearly_xxx

# Webhook Secret
STRIPE_SUBSCRIPTION_WEBHOOK_SECRET=whsec_xxx
